[*.cs]
# Permit underscores in test class names
dotnet_naming_symbols.test_types.applicable_kinds = class
dotnet_naming_symbols.test_types.applicable_accessibilities = *

dotnet_naming_style.test_types_with_underscores.capitalization = pascal_case
dotnet_naming_style.test_types_with_underscores.word_separator = _

dotnet_naming_rule.test_types_may_have_underscores.symbols = test_types
dotnet_naming_rule.test_types_may_have_underscores.style = test_types_with_underscores
dotnet_naming_rule.test_types_may_have_underscores.severity = silent
